@model IEnumerable<Maintenances.Actor>

@{
    ViewBag.Title = "Index";
    int count = 1;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="dataTable" class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Fecha de Nacimiento</th>
            <th>Sexo</th>
            <th>Foto</th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model)
{
    var sexo = (item.Sexo == 1) ? "Masculino" : "Femenino";
<tbody>
    <tr>
        <td>@count</td>
        <td>@item.Name</td>
        <td>@item.Birth_date.ToString("yyyy-mm-dd")</td>
        <td>@sexo</td>
        <td><img src="@item.Photo" width="100px" height="100px" /></td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ActorId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ActorId })
        </td>
    </tr>
</tbody>
    count++;
}

</table>
