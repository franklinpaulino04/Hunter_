@model IEnumerable<Maintenances.Movie>

@{
    ViewBag.Title = "Index";
    int count = 1;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="dataTable" class="table dataTable">
    <thead>
        <tr>
            <th></th>
            <th>#</th>
            <th>Titulo</th>
            <th>Genero</th>
            <th>Fecha de Estreno</th>
            <th>Foto</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td></td>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.Genero</td>
                <td>@item.Release_date.ToString("yyyy-mm-dd")</td>
                <td><img src="@item.Photo" width="100px" height="100px" /></td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MovieId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MovieId })
                </td>
            </tr>
            @*@foreach (var row_item in item.Items)
            {
                <tr>
                    <td>@row_item.</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }*@
            
        </tbody>
        count++;
    }

</table>


